<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="role" namespace="/role" extends="authority">
    	<action name="*" method="{1}" class="action.auth.RoleAction">
    		<result name="list">/page/role/role_list.jsp</result>
    		<result name="add">/page/role/role_edit.jsp</result>
    		<result name="edit">/page/role/role_edit.jsp</result>
    		<result name="input">/page/role/role_edit.jsp</result>
    		<result type="redirect">/role/list.do</result>
    	</action>
    </package>
</struts>
